{
    "realm": "news-realm",
    "sslRequired": "none",
    "loginTheme": "news-theme",
    "enabled": true,
    "registrationAllowed": true,
    "roles": {
        "realm": [
            {
                "name": "admin",
                "description": "Administrator with full access"
            },
            {
                "name": "staff",
                "description": "Staff member with limited access"
            }
        ]
    },
    "clients": [
        {
            "clientId": "news-app",
            "name": "News Frontend Application",
            "enabled": true,
            "publicClient": true,
            "directAccessGrantsEnabled": true,
            "redirectUris": [
                "http://localhost:5173/*"
            ],
            "webOrigins": [
                "http://localhost:5173",
                "http://localhost:3000"
            ],
            "protocol": "openid-connect"
        },
        {
            "clientId": "news-backend",
            "name": "News Backend Service",
            "enabled": true,
            "publicClient": false,
            "serviceAccountsEnabled": true,
            "clientAuthenticatorType": "client-secret",
            "secret": "backend-secret",
            "directAccessGrantsEnabled": true,
            "protocol": "openid-connect"
        }
    ],
    "users": [
        {
            "username": "admin",
            "enabled": true,
            "email": "admin@example.com",
            "firstName": "Super",
            "lastName": "Admin",
            "credentials": [
                {
                    "type": "password",
                    "value": "admin",
                    "temporary": false
                }
            ],
            "realmRoles": [
                "admin"
            ]
        },
        {
            "username": "service-account-news-backend",
            "enabled": true,
            "emailVerified": true,
            "serviceAccountClientId": "news-backend",
            "clientRoles": {
                "realm-management": [
                    "view-users",
                    "query-users",
                    "manage-users",
                    "view-realm"
                ]
            }
        }
    ]
}